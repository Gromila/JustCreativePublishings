@using App_LocalResources
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">JustCreativePublishings</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("JustCreativePublishings", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @GlobalRes.AdminMenu
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            @Html.Partial("_AdminMenuPartial")
                        </ul>
                    </li>
                }
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink(GlobalRes.AddPost, "Add", "Post")</li>
                }
            </ul>
            @using (Html.BeginForm("Search", "Search", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
            {
                <div class="form-group">
                    @Html.TextBox("searchString", null, new { @class = "form-control", placeholder = "Search", id = "navbar-search" })
                </div>
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
            }
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @GlobalRes.SelectTheme
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            @Html.ActionLink(GlobalRes.Light, "ChangeTheme", "Base", new { theme = "light" }, null)
                        </li>
                        <li>
                            @Html.ActionLink(GlobalRes.Dark, "ChangeTheme", "Base", new {theme = "dark"}, null)
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @GlobalRes.SelectLanguage
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            @Html.ActionLink("English", "ChangeCulture", "Base", new { lang = "en" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Русский", "ChangeCulture", "Base", new { lang = "ru" }, null)
                        </li>
                    </ul>
                </li>
                <li>@Html.Partial("_LoginPartial")</li>
            </ul>
        </div>
    </div>
</div>