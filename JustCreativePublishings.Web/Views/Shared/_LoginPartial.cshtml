@using App_LocalResources
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.GetUserName() <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink(@GlobalRes.Profile, "Profile", "User", new { username = User.Identity.GetUserName() }, null)</li>
                <li>@Html.ActionLink(@GlobalRes.ManageAccount, "Manage", "Account", null, null)</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">@GlobalRes.LogOut</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(GlobalRes.SignUp, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(GlobalRes.SignIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
